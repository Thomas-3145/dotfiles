# Scriptet 칛r placerat i .zshrc

# Det ser till att din virtuella Python-milj칬 (.venv) aktiveras automatiskt 
# n칛r du g친r in i en mapp som har en s친dan, och avaktiveras n칛r du g친r d칛rifr친n.


function chpwd() {
    if [ -d ".venv" ]; then
        # Om vi redan 칛r i en venv, g칬r inget (f칬r att undvika dubbla aktiveringar)
        if [[ "$VIRTUAL_ENV" == "" ]]; then
            source .venv/bin/activate
            echo "游냀 .venv aktiverad!"
        fi
    elif [[ "$VIRTUAL_ENV" != "" ]]; then
        # Om vi l칛mnar mappen och inte hittar en .venv, avaktivera
        deactivate
        echo "游녦 .venv avaktiverad"
    fi
}
