# Gå direkt till anteckningarna (och skapa mappen om den saknas)
alias note="mkdir -p ~/notes && cd ~/notes && ls"

# Snabbskapa/öppna en anteckning
function n() {
    mkdir -p ~/notes
    micro ~/notes/"$1".md   # <--- Fixade snedstrecket här!
}

# Sök i anteckningar: ns "sökord"
function ns() {
    # Kolla om 'rg' (ripgrep) finns installerat
    if command -v rg &> /dev/null; then
        # Kör lyxvarianten med ripgrep
        rg -i "$1" ~/notes
    else
        # Fallback till vanliga grep
        grep -rni --color=auto "$1" ~/notes
    fi
}
