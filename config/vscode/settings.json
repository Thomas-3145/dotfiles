// Snabbkommandon till VS code
// cp ~/.config/Code/User/settings.json ~/dotfiles/config/vscode/
// Place your key bindings in this file to override the defaults

{
    /* --- SÖKVÄGAR --- */
    "terminal.integrated.cwd": "/home/thomas/vscode",
    "python.defaultInterpreterPath": "/home/thomas/vscode/Python/Skola/.venv",

    /* --- STÄDNING --- */
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.hideCursorInOverviewRuler": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.minimap.enabled": false,
    "terminal.integrated.stickyScroll.enabled": false,

    /* --- GRUNDINSTÄLLNINGAR --- */
    "workbench.panel.defaultLocation": "right",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.previousEditor",
        "workbench.action.nextEditor"
    ],
    "workbench.colorTheme": "Dracula At Night",

    "editor.minimap.renderCharacters": false,
    "github.copilot.nextEditSuggestions.enabled": false,
    "claudeCode.preferredLocation": "panel",
    "workbench.startupEditor": "none",
    "github.copilot.enable": { "*": false },
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock"
    },

    /* --- SYNTAX HIGHLIGHTING (High Contrast) --- */
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["comment", "punctuation.definition.comment"],
                "settings": { "foreground": "#999999", "fontStyle": "italic" }
            },
            {
                "scope": ["string"],
                "settings": { "foreground": "#ffff55" }
            },
            {
                "scope": ["keyword", "storage"],
                "settings": { "foreground": "#ff55ff", "fontStyle": "bold" }
            }
        ]
    },

    /* --- FÄRGER & BORDERS --- */
    "workbench.colorCustomizations": {

        /* --- RAMAR & KANTER (OSYNLIGA/SVARTA) --- */
        /* Allt sätts till #000000 för att smälta ihop med bakgrunden */
        "activityBar.border": "#000000",
        "sideBar.border": "#000000",
        "panel.border": "#000000",
        "statusBar.border": "#000000",
        "titleBar.border": "#000000",
        "editorGroup.border": "#000000",
        "tab.border": "#000000",
        "contrastBorder": "#000000",

        /* Osynlig scrollbar */
        "scrollbarSlider.background": "#00000000",
        "scrollbarSlider.hoverBackground": "#00000000",
        "scrollbarSlider.activeBackground": "#00000000",

        /* Bakgrunder (Svart) */
        "editor.background": "#000000",
        "sideBar.background": "#000000",
        "activityBar.background": "#000000",
        "panel.background": "#000000",
        "terminal.background": "#000000",
        "statusBar.background": "#000000",
        "titleBar.activeBackground": "#000000",
        "editorGroupHeader.tabsBackground": "#000000",

        /* Text (Kritvit) */
        "foreground": "#ffffff",
        "editor.foreground": "#ffffff",
        "sideBar.foreground": "#ffffff",
        "activityBar.foreground": "#ffffff",
        "panelTitle.activeForeground": "#ffffff",
        "terminal.foreground": "#ffffff",
        "terminalCursor.foreground": "#00ff00",

        /* Terminal Neon Colors (Behåller dina lila mappar) */
        "terminal.ansiBlack": "#444444",
        "terminal.ansiRed": "#ff0000",
        "terminal.ansiGreen": "#00ff00",
        "terminal.ansiYellow": "#ffff00",
        "terminal.ansiBlue": "#bd93f9",       /* LILA MAPPAR */
        "terminal.ansiMagenta": "#ff00ff",
        "terminal.ansiCyan": "#00ffff",
        "terminal.ansiWhite": "#ffffff",

        "terminal.ansiBrightBlack": "#777777",
        "terminal.ansiBrightRed": "#ff3333",
        "terminal.ansiBrightGreen": "#33ff33",
        "terminal.ansiBrightYellow": "#ffff33",
        "terminal.ansiBrightBlue": "#d6acff", /* LJUSLILA TEXT */
        "terminal.ansiBrightMagenta": "#ff33ff",
        "terminal.ansiBrightCyan": "#33ffff",
        "terminal.ansiBrightWhite": "#ffffff",

        /* Tabs (Flikar) */
        "tab.inactiveBackground": "#000000",
        "tab.activeBackground": "#000000",
        "tab.activeForeground": "#ffffff",
        "tab.activeBorder": "#000000"         /* Ingen linje under flikarna heller */
    }
}
