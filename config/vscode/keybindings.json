// Snabbkommandon till VS code

// cp ~/.config/Code/User/keybindings.json ~/dotfiles/config/vscode/

// Place your key bindings in this file to override the defaults

[
    {
        "key": "ctrl+enter",
        "command": "python.execInDedicatedTerminal"
    },
    /* --- FLYTTA RADER --- */
    {
        "key": "ctrl+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    { "key": "alt+up", "command": "-editor.action.moveLinesUpAction", "when": "editorTextFocus && !editorReadonly" },
    { "key": "alt+down", "command": "-editor.action.moveLinesDownAction", "when": "editorTextFocus && !editorReadonly" },

    /* --- FÖNSTER & TERMINAL --- */
    {
        "key": "alt+h",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "alt+w",
        "command": "workbench.action.closeActiveEditor"
    },
    
    // 1. GÅ TILL TERMINALEN (Öppna/Fokusera)
    {
        "key": "alt+down",
        "command": "workbench.action.terminal.toggleTerminal"
    },

    // 2. GÅ TILL KODEN (Från Terminalen)
    {
        "key": "alt+up",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },

    /* --- NAVIGERING FLIKAR --- */
    {
        "key": "alt+left",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "alt+right",
        "command": "workbench.action.nextEditor"
    },
    /* Tvingar flikbyte att fungera även inifrån terminalen */
    {
        "key": "alt+left",
        "command": "workbench.action.previousEditor",
        "when": "terminalFocus"
    },
    {
        "key": "alt+right",
        "command": "workbench.action.nextEditor",
        "when": "terminalFocus"
    },

    /* --- ÖVRIGT --- */
    {
        "key": "ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    { "key": "ctrl+b", "command": "-markdown.extension.editing.toggleBold", "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/" },
    { "key": "ctrl+pagedown", "command": "-workbench.action.nextEditor" },
    { "key": "ctrl+pageup", "command": "-workbench.action.previousEditor" },
    { "key": "alt+down", "command": "-notebook.cell.moveDown", "when": "notebookEditorFocused && !inputFocus" },
    { "key": "alt+up", "command": "-notebook.cell.moveUp", "when": "notebookEditorFocused && !inputFocus" },
    { "key": "alt+down", "command": "-editor.action.pageDownHover", "when": "editorHoverFocused" },
    { "key": "alt+up", "command": "-editor.action.pageUpHover", "when": "editorHoverFocused" }
]
